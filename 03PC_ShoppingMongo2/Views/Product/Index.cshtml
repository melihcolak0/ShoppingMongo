@model List<ResultProductDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}
<h4 class="page-title">Ürün İşlemleri</h4>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Ürün Listesi</div>
            </div>
            <div class="card-body">
                <div class="card-sub">
                    Aşağıda ürün işlemlerini gerçekleştirebilirsiniz.
                </div>
                <table class="table mt-3">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Ürün</th>
                            <th scope="col">Kategori</th>
                            <th scope="col">Cinsiyet</th>
                            <th scope="col">Fiyat</th>
                            <th scope="col">Stok Sayısı</th>
                            <th scope="col">Durum</th>
                            <th scope="col">Sil</th>
                            <th scope="col">Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model)
                        {
                            count++;
                            <tr>
                                <th>@count</th>
                                <td>@item.ProductName</td>
                                <td>@item.CategoryName</td>
                                <td>@item.Gender</td>
                                <td>@item.ProductPrice ₺</td>
                                <td>@item.StockCount</td>
                                @if (item.Status)
                                {
                                    <td><span class="badge badge-success">Aktif</span></td>
                                }
                                else
                                {
                                    <td><span class="badge badge-danger">Pasif</span></td>
                                }                                
                                <td><a href="/Product/DeleteProduct/@item.ProductId" class="btn btn-danger">Sil</a></td>
                                <td><a href="/Product/UpdateProduct/@item.ProductId" class="btn btn-warning">Güncelle</a></td>
                            </tr>
                        }        
                    </tbody>
                </table>
                <a href="/Product/CreateProduct" class="btn btn-info">Yeni Ürün Ekle</a>
            </div>
        </div>
    </div>
</div>
