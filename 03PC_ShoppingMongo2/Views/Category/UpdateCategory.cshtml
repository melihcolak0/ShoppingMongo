@model GetCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h4 class="page-title">Kategori İşlemleri</h4>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Kategori Güncelle</div>
            </div>
            <form method="post">
                <div class="card-body">
                    <input type="hidden" asp-for="CategoryId" />
                    <div class="form-group">
                        <label>Kategori Adı</label>
                        <input type="text" class="form-control" asp-for="CategoryName">
                    </div>    
                    <div class="form-group">
                        <label>Resim Url</label>
                        <input type="text" class="form-control" asp-for="ImageUrl">
                    </div>
                </div>
                <div class="card-action">
                    <button class="btn btn-success">Güncelle</button>
                </div>
            </form>
        </div>
    </div>
</div>
